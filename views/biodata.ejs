<body>
    <div id="login">
        <h3 class="text-center text-white pt-5">Biodata</h3>
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form" action="/biodata" method="post">
                            <input type="hidden" name="hiddenUser" value="<%= user %>">
                            <div class="form-group">
                                <label for="profession" class="text-info">Profession:</label><br>
                                <input type="text" name="profession" id="profession" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="skill" class="text-info">Skill:</label><br>
                                <input type="text" name="skill" id="skill" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="experience" class="text-info">Experience:</label><br>
                                <input type="text" name="experience" id="experience" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="submit" name="submit" class="btn btn-info btn-md" value="submit">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
